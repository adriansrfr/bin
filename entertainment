#!/bin/bash

function aquarium
{ asciiquarium; }

function screensaver
{
xscreensaver &
  xscreensaver-command -activate;
}

function getfire
{ aafire; }

function guitar
{
  cd  /media/adrian/IT_ToolBox/FileCabinet/Guitar || exit
  nemo /media/adrian/IT_ToolBox/FileCabinet/Guitar </dev/null &>/dev/null &
}

function wallpaper
{
  find ~/.config/variety/Downloaded/Unsplash | fzf --preview="feh --bg-scale ~/.config/variety/Downloaded/Unsplash/{}" | 
    xargs -I {} feh --bg-scale ~/.config/variety/Downloaded/Unsplash/{}
}


function getTodaypictures
{
  # Gets pictures created today in Pictures folder
cd ~/Pictures || exit
current_date=$(date +'%Y%m%d')
for file in $(ls -1 | grep "^${current_date}_")
do
echo "$file"
done
}


function getstoicism
{

# get list of available cow files
cow_files=$(cowsay -l | tail -n +2 | awk '{print $1}')

# randomly select a cow picture
selected_cow=$(echo "$cow_files" | tr ' ' '\n' | shuf -n 1)

# generate the output using the selected cow picture
/home/adrian/.config/stoic-thoughts-master/quote.sh |cowsay -f "$selected_cow" 
}

# alias getcow="getstoicism"



function getstoicsm-once
{

  today=$(date -u +"%Y-%m-%d")

  history | grep -q -i "$today" | grep -q -i getcow || getstoicism
   # getcow
# echo "$today"

}
getstoicsm-once


